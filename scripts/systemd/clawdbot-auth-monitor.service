[Unit]
Description=ZERO Auth Expiry Monitor
After=network.target

[Service]
Type=oneshot
ExecStart=/home/admin/zero/scripts/auth-monitor.sh
# Configure notification channels via environment
Environment=WARN_HOURS=2
